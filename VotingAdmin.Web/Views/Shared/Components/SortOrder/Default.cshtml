@using VotingAdmin.Web.Models.Pagination;
@model SortOrderModel

<div class="w-auto d-inline-flex align-items-center position-relative text-gray-700 dark-text-gray-300">
    <span class="mr-1" style="white-space: nowrap;">Sort Order</span>
    <select class="w-20 form-select d-inline-block box mt-3 mt-sm-0" @*id="sortOrder"*@ name="sortOrder">
        @foreach (var opt in Model.Options)
        {
            if (opt.Equals(Model.SortOrder, StringComparison.InvariantCultureIgnoreCase))
            {
                <option selected value="@opt">@opt</option>
            }
            else
            {
                <option value="@opt">@opt</option>
            }
        }
    </select>
</div>