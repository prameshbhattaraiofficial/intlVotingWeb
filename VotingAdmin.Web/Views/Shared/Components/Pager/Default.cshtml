@using VotingAdmin.Web.Models.Pagination;
@model PagerModel

<nav class="">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" data-page="1">
                        First
                    </a>
                </li>

                <li class="page-item">
                    <a class="page-link" data-page="@(Model.CurrentPage - 1)">
                        Prev
                    </a>
                </li>
            }

            @for (var pageIdx = Model.StartPage; pageIdx <= Model.EndPage; pageIdx++)
            {
                <li class="page-item @(pageIdx == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" data-page="@pageIdx">@pageIdx</a>
                </li>
            }

            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" data-page="@(Model.CurrentPage + 1)">
                        Next
                    </a>
                </li>

                <li class="page-item">
                    <a class="page-link" data-page="@(Model.TotalPages)">
                        Last
                    </a>
                </li>
            }
        </ul>
    }
</nav>
