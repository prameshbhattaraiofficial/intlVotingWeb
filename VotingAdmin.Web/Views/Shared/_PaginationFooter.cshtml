
@using VotingAdmin.Web.Models.Pagination;
@model PaginationFooter

@* Pagination Footer (Pager and Summary) *@
<div class="row justify-content-between align-items-center mt-4 mx-0">
    <div class="col-sm-12 col-md-6 d-flex justify-content-start align-items-center m-0">
        @await Component.InvokeAsync("PaginationSummary",new PaginationSummaryModel(
            Model.PageNumber, Model.PageSize, Model.PageItemsCount, Model.FilteredCount, Model.TotalCount))
    </div>
    <div class="col-sm-12 col-md-6 d-flex justify-content-end align-items-center m-0">
        <span class="ms-md-auto">
            @await Component.InvokeAsync("Pager", new PagerModel(Model.TotalPages, Model.PageNumber, "", ""))
        </span>
    </div>
</div>