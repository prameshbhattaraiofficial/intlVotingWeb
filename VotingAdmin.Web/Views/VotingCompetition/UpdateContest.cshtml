@using VotingAdmin.Web.Dtos.contest;
@model UpdateContestDto

<form id="formUpdateContest">
    <div class="row">
        <ul>
            @if (ViewBag.Error is not null)
            {
                @foreach (var error in ViewBag.Error)
                {
                    <li class="text-danger">@error</li>
                }
            }
        </ul>
        <input hidden asp-for="ContestId" readonly />
        <div class="col-sm-12 mb-3">
            <label for="exampleInputEmail1">Competition Name</label>
            <input asp-for="ContestName" class="form-control">
            <span asp-validation-for="ContestName" class="text-danger"></span>
        </div>
        <div class="col-sm-6 mb-3">
            <label for="exampleInputEmail1">Banner </label>
            <input type="file" asp-for="BannerImg" accept="image/*"  class="form-control">
            <span asp-validation-for="BannerImg" class="text-danger"></span>
            @{
                if(!string.IsNullOrWhiteSpace(Model.BannerImgPath)){
                    <img style="width:90px;" src="@Model.BannerImgPath" alt="@Model.ContestName">
                }
            }
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="">Choose Merchant</label>
               
                <select asp-for="MerchantId" class="form-control" asp-items="@ViewBag.merchant">
                </select>
                <span asp-validation-for="MerchantId" class="text-danger"></span>
                
            </div>
        </div>
        <div class="col-sm-12 mb-3">
            <label for="exampleInputEmail1">Competition Description </label>
            <textarea asp-for="ContestDesc" class="form-control" rows="2"></textarea>
        </div>
        <div class="col-md-6 mb-3 ">
            <label>From</label>
            <input type="datetime-local" asp-for="StartDateTime" class="form-control" placeholder="Publish Date">
            <span asp-validation-for="StartDateTime" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label>To</label>
            <input type="datetime-local" asp-for="EndDateTime" class="form-control" placeholder="End Date">
            <span asp-validation-for="EndDateTime" class="text-danger"></span>
        </div>
        <div class="col-sm-6 mb-3">
            <label for="exampleInputEmail1">Priority Order</label>
            <input type="number" asp-for="PriorityOrder" class="form-control">
            <span asp-validation-for="PriorityOrder" class="text-danger"></span>
        </div>
        <div class="col-sm-6 mb-3">
            <label for="exampleInputEmail1">Price Per Vote</label>
            <input type="text" asp-for="PricePerVote" class="form-control">
            <span asp-validation-for="PricePerVote" class="text-danger"></span>
        </div>

        <div class="col-sm-6 mb-3">
            <label>Status</label>
            <div class="form-group">
                <div class="checkbox checkbox-danger d-inline">
                    <input type="checkbox" asp-for="IsActive" id="IsActive">
                    <label for="IsActive" class="cr">is Active.</label>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">Save changes</button>
    </div>

</form>

<script>

    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("UpdateContest", "VotingCompetition")',
        containerSelector: '#add-new .modal-body',
        selector: '#formUpdateContest'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');

