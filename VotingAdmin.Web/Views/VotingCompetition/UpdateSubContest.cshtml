@using VotingAdmin.Web.Dtos.contest;
@model UpdateSubContestDto

<form id="formUpdateSubContest">
    <div class="collapsess show mb-3">
        <input asp-for="SubContestId" hidden readonly />
        <input asp-for="ContestId" hidden readonly />

        <div class="col-sm-12 p-0">
            <div class="p-3 bg-secondary-light shadow-sm mt-10">
                <div class="row  ">
                    <div class="col-sm-6 mb-3">
                        <label for="exampleInputEmail1">Sub Competition Name </label>
                        <input type="text" asp-for="SubContestName" class="form-control">
                    </div>

                    <div class="col-sm-6 mb-3">
                        <label for="exampleInputEmail1">Banner </label>
                        <input type="file" asp-for="BannerImg" accept="image/*"  class="form-control">
                        @{
                            if (!string.IsNullOrWhiteSpace(Model.BannerImgPath))
                            {
                                <img style="width:90px;" src="@Model.BannerImgPath" alt="@Model.SubContestName">
                            }
                        }
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label for="exampleInputEmail1">Description </label>
                        <textarea asp-for="SubContestDesc" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label>Status</label>
                        <div class="form-group">
                            <div class="checkbox checkbox-danger d-inline">
                                <input type="checkbox" asp-for="IsActive" id="IsActive">
                                <label for="IsActive" class="cr">is Active.</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">Save changes</button>
    </div>
</form>

<script>

    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("UpdateSubContest", "VotingCompetition")',
        containerSelector: '#add-new .modal-body',
        selector: '#formUpdateSubContest'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');

