            <label for="exampleInputEmail1">Sub Competition Name</label>
            <select name="SubContestId" class="form-control" asp-for="SubContestId" asp-items="@ViewBag.SubContestlist">
                <option value="">All</option>

            </select>
            <span asp-validation-for="SubContestId" class="text-danger"></span>
        </div>
