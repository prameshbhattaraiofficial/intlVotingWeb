@using VotingAdmin.Web.Dtos.Merchants;
@model MerchantWithoutCreds

<div class="table-responsive">
    <table id="zero-configuration" class="display table table-bordered nowrap table-striped table-hover details-table" style="width:100%">
        <tbody>
            <tr>
                <td>Merchant ID</td>
                <td class="hljs-strong">@Model.MerchantId</td>
            </tr>
            <tr>
                <td>Full Name</td>
                <td class="hljs-strong">@Model.FullName</td>
            </tr>
            <tr>
                <td>Username</td>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td>Phone Number</td>
                <td>@Model.Mobile</td>
            </tr>
            <tr>
                <td>Department</td>
                <td>@Model.Department</td>
            </tr>
            <tr>
                <td>Organization Name</td>
                <td>@Model.OrganizationName</td>
            </tr>
            <tr>
                <td>Registration Number</td>
                <td>@Model.RegistrationNumber</td>
            </tr>
            <tr>
                <td>PAN Number</td>
                <td>@Model.PANNumber</td>
            </tr>
            <tr>
                <td>Gender</td>
                <td>@Model.GenderName</td>
            </tr>
            <tr>
                <td>Date of Birth</td>
                <td>@Model.DateOfBirth</td>
            </tr>
            <tr>
                <td>Date of Joining</td>
                <td>@Model.DateOfJoining</td>
            </tr>
            <tr>
                <td>Profile Image</td>
                <td><img src="@Model.ProfileImagePath" alt="Profile image" width="500" height="600"></td>
            </tr>
            <tr>
                <td>PAN Document</td>
                <td><img src="@Model.PANDocumentPath" alt="Profile image" width="500" height="600"></td>
            </tr>
            <tr>
                <td>Address</td>
                <td>@Model.Address</td>
            </tr>
            <tr>
                <td>Director's Name</td>
                <td>@Model.DirectorName</td>
            </tr>
            <tr>
                <td>Status</td>
                <td>@(Model.IsActive ? "Active" : "Not Active")</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-light" data-dismiss="modal">Cancel</button>
</div>